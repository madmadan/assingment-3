#include <iostream>
using namespace std;

int main() {

              int num;
              cout<<"Enter number\t";
              cin>>num;
              if(num>0.0)
              {
                 cout<<"number is positive";
              }
              else if(num==0.0)
              {
                 cout<<"number is zero";
              }
              else if(num<0.0)
              {
                 cout<<"number is negative";
              }
	return 0;
}
